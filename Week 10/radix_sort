#include<stdio.h>

void countingSort(int array[], int size, int index)
{
    int auxillary[size],i,k=10;
    int count[k];
    
    for(i=0;i<k;i++)
    	count[i]=0;
	
    for (i = 0; i < size; i++)
        count[(array[i] / index) % 10] +=1;
 
    for (i = 1; i < k; i++)
        count[i] += count[i - 1];
 
    for (i = size - 1; i >= 0; i--) {
        auxillary[count[(array[i] / index) % 10] - 1] = array[i];
        count[(array[i] / index) % 10] -=1;
    }

    for (i = 0; i < size; i++)
        array[i] = auxillary[i];
}


void radixSort(int array[],int max,int size)
{
	int index;
	
	for(index=1; max/index>0; index = index*10)
		countingSort(array,size,index);                         //counting sort used as a subroutine for radix sort
}

int main()
{
	int max = 0;
	int i,size;
	printf("Enter the size of the array\n");
	scanf("%d",&size);
	int arr[size];
	
	printf("Enter the numbers\n");
	for(i=0; i<size;i++)
	{
		scanf("%d",&arr[i]);
		
		if(max<arr[i])
			max = arr[i];	                      //max element calculated while taking input
	}
	
	radixSort(arr,max,size);                      //radix sort being called here
	
	printf("The sorted array is\n");
	for(i=0;i<size;i++)
		printf("%d ",arr[i]);
			
return 0;		
}
